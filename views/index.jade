doctype html
html
    head
        title= title
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        meta(name='description', content='')
        meta(name='author', content='Ann Boyles')
        link(href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css', rel='stylesheet')
        link(href='/stylesheets/style.css', rel='stylesheet')
    body
        .container
            h1 NS Trein App
            .tabs-container
                ul.nav.nav-tabs
                    li.active(role="presentation")
                        a(data-toggle="tab" href="#departures") Departures
                    li(role="presentation")
                        a(data-toggle="tab" href="#disruptions") Disruptions
                    li(role="presentation")
                        a(data-toggle="tab" href="#trip-planner") Trip Planner
                .tab-content
                    .tab-pane.fade.in.active#departures
                        ul.nav.nav-pills
                            li.active
                                a(data-toggle="pill" href="#edit") Edit
                            li
                                a(data-toggle="pill" href="#add") Add Station
                        .tab-content(style="width:auto; height:auto;")
                            p Departures section here.
                            .tab-pane.fade.active#edit
                                p Edit section
                            .tab-pane.fade#add
                                p Add station
                    .tab-pane.fade#disruptions
                        p Loading...
                    .tab-pane.fade#trip-planner
                        p This is the trip planner area.
    
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js')
