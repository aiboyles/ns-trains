doctype html
html
    head
        title= title
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        meta(name='description', content='')
        meta(name='author', content='Ann Boyles')
        link(href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css', rel='stylesheet')
        link(href='/stylesheets/style.css', rel='stylesheet')
    body
        .container
            h1 NS Trein App
            .row
                .col-xs-18.col-sm-6.col-md-6.col-lg-6.col-centered.center-block
                    .tabs-container
                        ul.nav.nav-tabs
                            li.active(role="presentation")
                                a(data-toggle="tab" href="#departures") Departures
                            li(role="presentation" id="disruptionstab")
                                a(data-toggle="tab" href="#disruptions-tab") Disruptions
                        .tab-content
                            .tab-pane.fade.in.active#departures
                                ul.tabs
                                    li.tab-link.current(data-tab="tab-1") Stations
                                    li.tab-link(data-tab="tab-2") Edit
                                    li.tab-link(data-tab="tab-3") Add Station
                                .tab-content(style="width:auto; height:auto; padding-left:5px; border:0px;")
                                    .sub-tab-content.current#tab-1
                                        p Loading...
                                    .sub-tab-content#tab-2
                                        p Loading...
                                    .sub-tab-content#tab-3
                                        .inputgroup#add-inner
                                        span.input-group-addon Filter
                                        input(id='filter' type='text' class='form-control' placeholder='Search...')
                            .tab-pane.fade#disruptions-tab
                                p Loading...
    
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js')
    script(src='javascripts/main.js')